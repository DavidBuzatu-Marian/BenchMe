<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/act_fullResults_TV_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/act_fullResults_TV_header"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/act_fullResults_CV_CPU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:elevation="2dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/act_fullResults_TV_header">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:id="@+id/act_fullResults_TV_CPU_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_cpu"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:text="@string/act_fullResults_TV_CPU_header"
                    android:textColor="@color/blue"
                    android:textSize="24sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/act_fullResults_TV_CPU_Test_1_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Strange test: "
                    android:textColor="@color/violet"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/act_fullResults_TV_CPU_header" />

                <TextView
                    android:id="@+id/act_fullResults_TV_CPU_Test_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="1234"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/act_fullResults_TV_CPU_Test_1_header"
                    app:layout_constraintTop_toBottomOf="@id/act_fullResults_TV_CPU_header" />

                <TextView
                    android:id="@+id/act_fullResults_TV_CPU_Test_2_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Strange test: "
                    android:textColor="@color/violet"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/act_fullResults_TV_CPU_Test_1" />

                <TextView
                    android:id="@+id/act_fullResults_TV_CPU_Test_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="1234"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/act_fullResults_TV_CPU_Test_2_header"
                    app:layout_constraintTop_toBottomOf="@id/act_fullResults_TV_CPU_Test_1" />

                <TextView
                    android:id="@+id/act_fullResults_TV_CPU_Test_3_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Strange test: "
                    android:textColor="@color/violet"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/act_fullResults_TV_CPU_Test_2" />

                <TextView
                    android:id="@+id/act_fullResults_TV_CPU_Test_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="1234"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/act_fullResults_TV_CPU_Test_3_header"
                    app:layout_constraintTop_toBottomOf="@id/act_fullResults_TV_CPU_Test_2" />

                <TextView
                    android:id="@+id/act_fullResults_TV_CPU_Test_4_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Strange test: "
                    android:textColor="@color/violet"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/act_fullResults_TV_CPU_Test_3" />

                <TextView
                    android:id="@+id/act_fullResults_TV_CPU_Test_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="1234"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/act_fullResults_TV_CPU_Test_4_header"
                    app:layout_constraintTop_toBottomOf="@id/act_fullResults_TV_CPU_Test_3" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/act_fullResults_CV_HDD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:elevation="2dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/act_fullResults_CV_CPU">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:id="@+id/act_fullResults_TV_HDD_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_hard_disk"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:text="@string/act_fullResults_TV_HDD_header"
                    android:textColor="@color/blue"
                    android:textSize="24sp"
